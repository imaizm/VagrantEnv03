{
	"builders":[{
		"type": "docker",
		"image": "ubuntu",
		"export_path": "image.tar"
	}],
	"provisioners":[
		{
			"type": "shell",
			"inline": [
				"apt-get -y update",
				"apt-get install -y python-pip python-dev",
				"pip install ansible"
			]
		},
		{
			"type": "ansible-local",
			"playbook_file": "ansible/local.yml"
		}
	],
	"post-processors": [
		{
			"type": "docker-import",
			"repository": "tcnksm/packer-ansible",
			"tag": "0.1"
		}
	]
}
